<Window x:Class="Easy_AMM_Poses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Easy_AMM_Poses"
        mc:Ignorable="d"
        Title="Easy AMM Poses" Height="800" Width="1200">
    <StackPanel>
        <Label>Path to WolvenKit CLI executable</Label>
        <!-- Binding stops the program from crashing. You need to learn why it works... -->
        <TextBox
            x:Name="pathToCli"
            Text="{Binding ElementName=textBox, Path=Text}"
            PreviewMouseDown="CliPathClickHandler"
         ></TextBox>
        <Label>Path to your Cyberpunk mod folder</Label>
        <TextBox
            x:Name="pathToGame"
            PreviewMouseDown="ModFolderPathClickHandler"
         ></TextBox>
        <Label x:Name="myLabel" Content="Hello World"></Label>
        <Label>Load .ANIMS file</Label>
        <TextBox
            x:Name="pathToAnim"
            PreviewMouseDown="AnimFilePathClickHandler"
         ></TextBox>
        <Button
            x:Name="btnConvert"
            Click="ButtonConvertHandler"
            Content="Convert to JSON"
        ></Button>
    </StackPanel>
</Window>
